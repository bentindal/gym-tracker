<%= erb :"common/nav" %>

<body>
    <main>
        <div id="spacer">
            <h2><%= @user[:Nickname] %>'s Statistics </h2>
            <p><strong>Total Workouts Logged:</strong> <%= getNumberOfWorkoutsLogged(@user[:UserID]) %></p>
        

<style>
* {box-sizing: border-box;}
ul {list-style-type: none;}

.month {
  padding: 10px 25px;
  width: 100%;
  background: rgb(34, 85, 112);
  text-align: center;
}

.month ul {
  margin: 0;
  padding: 0;
}

.month ul li {
  color: white;
  font-size: 20px;
  text-transform: uppercase;
  letter-spacing: 3px;
}

.month .prev {
  float: left;
  padding-top: 10px;
}

.month .next {
  float: right;
  padding-top: 10px;
}

.weekdays {
  margin: 0;
  padding: 10px 0;
  background-color: #ddd;
}

.weekdays li {
  display: inline-block;
  width: 13.6%;
  color: #666;
  text-align: center;
}

.days {
  padding: 10px 0;
  background: #eee;
  margin: 0;
}

.days li {
  list-style-type: none;
  display: inline-block;
  width: 13.6%;
  text-align: center;
  margin-bottom: 5px;
  font-size:12px;
  color: #777;
}
a:link { text-decoration: none; }
a:visited { text-decoration: none; }
a:hover { text-decoration: none; }
a:active { text-decoration: none; }

.prev, .next {
    text-decoration: none;
    cursor: pointer;
    background: rgb(255,255,255);
    border-style: none;
    font-size: 20px;
    color: black;
}
.days li .active {
  padding: 5px;
  background: #1abc9c;
  color: white !important
}

.match{
    background: rgb(34, 85, 112, 50%);
}

#today{
    background: rgb(0, 200, 0, 50%);
}

/* Add media queries for smaller screens */
@media screen and (max-width:720px) {
  .weekdays li, .days li {width: 13.1%;}
}

@media screen and (max-width: 420px) {
  .weekdays li, .days li {width: 12.5%;}
  .days li .active {padding: 2px;}
}

@media screen and (max-width: 290px) {
  .weekdays li, .days li {width: 12.2%;}
}
</style>
</head>
  <div class="month">      
    <ul>
      <button class="prev"><a href="/stats?month=<%= @prevDate[0] %>&year=<%=@prevDate[1] %>">&#10094;</a></button>
      <button class="next"><a href="stats?month=<%= @nextDate[0] %>&year=<%=@nextDate[1] %>">&#10095;</a></button>
      <li>
        <%= @monthName %><br>
        <span style="font-size:18px"><%= @year %></span>
      </li>
    </ul>
  </div>

  <ul class="weekdays">
    <li>Mo</li>
    <li>Tu</li>
    <li>We</li>
    <li>Th</li>
    <li>Fr</li>
    <li>Sa</li>
    <li>Su</li>
  </ul>

  <ul class="days">
  <%
  x = 0

  firstDayOfMonth = Date.new(2022, params[:month].to_i, 1).wday - 1
  puts "first day of month: #{firstDayOfMonth}"
  (1..firstDayOfMonth).each { |x|
    %><li></li><%
  }

  todaysDate = Date.today.day
  puts "todays date: #{todaysDate}"

  todaysMonth = Date.today.month
  puts "todays month: #{todaysMonth}"

  todaysYear = Date.today.year
  puts "todays month: #{todaysMonth}"

  (1..@daysInThisMonth).each { |x|
      match = false
      @days.each do |i|
          if i == x && match == false
              match = true
              %><li class="match"><strong><%= x %></strong></li><%
          elsif x == todaysDate && match == false && params[:month].to_i == todaysMonth && params[:year].to_i == todaysYear
              match = true
              %><li id="today"><strong><%= x %></strong></li><%
          end
      end
      if match == false
          %><li><%= x %></li><%
      end
      
      %>
  <% } %>

  </ul>  
        
        </div>
    </main>
</body>

<%= erb :"common/footer" %>

</html>

