.container.text-center.w-100

    %h1.mt-3 All Users 
    %h6.mb-3 (Sorted Alphabetically)

    .container
        - @users.each do |user|
            .d-flex.border.text-primary.btn.btn-white.mb-1.bg-white
                %a{href: "/users/view?id=#{user.id}"}
                    = user.first_name + " " + user.last_name
                - if user.streak_count > 1
                    %span
                        .badge.badge-pill.badge-dark.px-2.font-weight-bold.ml-2
                            ğŸ”¥ #{user.streak_count}
                - if user.midworkout
                    %span
                        .badge.badge-pill.badge-success.px-2.font-weight-light.ml-2
                            Online
                // Add last seen
                - if user.last_set != nil
                    %span
                        .badge.badge-pill.badge-secondary.px-2.font-weight-light.ml-2
                            Last seen #{user.last_seen}
                
